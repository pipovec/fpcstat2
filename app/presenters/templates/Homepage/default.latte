{block head}
<title>Home Stranky o hracoch a klanoch WOT </title>

{/block}


{block content}

<div class="row bg-warning" style="padding-bottom:10">


<div class="jumbotron text-center" style="margin-top: 50px;">
    <h1>FPC stat</h1>
    <p>Štatistika o hráčoch a klanoch hry World of Tanks</p>
</div>


    <div class="col-sm-4">
	    <div class="well">
			<a n:href="RebricekHraci:rebricekgr">
	    		<p><strong>Najlepší Cz/Sk hráči - Global Rating</strong></p>
	    	</a>
		  	<div class="table-responsive">
	      	<table class=" table table-striped table-condensed responsive">
	      		{foreach $gr as $data}
            		<tr>
           			{breakIf $iterator->counter == 6}
           			<td>{$iterator->counter}.</td>
           			<td>{$data->nickname}</td>
           			<td>{$data->abbreviation}</td>
           			<td>{$data->global_rating}</td>
           			</tr>
           		{/foreach}
           	</table>
           	</div>
           	<p>Celkom: {$cgr->count}</p>
	    </div>
    </div>




    <div class="col-sm-4">
	    <div class="well">
		  <a n:href="RebricekHraci:rebricekwn8">
	      <p><strong>Najlepší Cz/Sk hráči - WN8</strong></p>
		  </a>
	      <div class="table-responsive">
	      <table class=" table table-striped table-condensed responsive">
	      	{foreach $wn8 as $data}
            <tr>
           		{breakIf $iterator->counter == 6}
           		<td>{$iterator->counter}.</td>
           		<td>{$data->nickname}</td>
           		<td>{$data->abbreviation}</td>
           		<td>{$data->wn8}</td>
           	</tr>
           	{/foreach}
           	</table>
           	</div>
           	<p>Celkom: {$cwn8->count}</p>
	    </div>
    </div>


    <div></div>


    <div class="col-sm-4">
	    <div class="well">
		  <a n:href="Odchody:">
	      <p><strong>Dnešné odchody z klanov</strong></p>
		  </a>
	     	<div class="table-responsive">
	     	<table class=" table table-striped table-condensed responsive">
	      	{foreach $odchody as $data}
            <tr>
           		{breakIf $iterator->counter == 6}
           		<td>{$iterator->counter}.</td>
           		<td>{$data->nickname}</td>
           		<td>{$data->abbreviation}</td>
           		<td>{$data->wn8}</td>
           		<td>{$data->global_rating}</td>
           	</tr>
           	{/foreach}
           	</table>
           	</div>
           	<p>Celkom: {$codchody->count}</p>
	    </div>
    </div>

</div>

<div class="row bg-warning">

	<div class="col-sm-4">
		<div class="well">
		<a n:href="CzSkKlany:">
			<p><strong>Najnovšie Cz/Sk klany</strong></p>
		</a>
		<div class="table-responsive">
			<table class=" table table-striped table-condensed responsive">
				{foreach $clans as $data}
				<tr>
					<td><img src="{$data->emblems_small}"></td>
					<td>{$data->abbreviation}</td>
					<td>{$data->name}</td>
					<td>{$data->created_at|date:'%d.%m.%Y'}</td>
				</tr>
				{/foreach}
			</table>
		</div>
		</div>
	</div>

	<div class="col-sm-4">
		<div class="well">
		<a n:href="RebricekKlany:"> <!-- http://new.fpcstat.cz/rebricek-klany/?table=cr_efficiency&do=AjaxTop -->
			<p><strong>Najvýkonnejšie Cz/Sk klany</strong></p>
		</a>
		<div class="table-responsive">
			<table class=" table table-striped table-condensed responsive">
				{foreach $clanseff as $data}
				<tr>
					<td><img src="{$data->emblems_small}"></td>
					<td>{$data->abbreviation}</td>
					<td>{$data->value}</td>
					<td>{$data->rank}</td>
					<td>{$data->rank_delta}</td>
				</tr>
				{/foreach}
			</table>
		</div>
		</div>
	</div>

  <div class="col-sm-4">
    <div class="well">
    <a n:href="RebricekKlany:wn8random"> 
      <p><strong>Rebríček Cz/Sk klany podľa WN8</strong></p>
    </a>
    <div class="table-responsive">
      <table id="wn8clans" class=" table table-striped table-condensed responsive">
        {foreach $clanWn8 as $data}
        <tr>
          <td>{$data->rank}</td>
          <td><img src="{$data->emblem}" height="24px"></td>
          <td>{$data->name}</td>
          <td id="wn8">{$data->wn8}</td>
          <td id="winrate">{$data->winrate}</td>
        </tr>
        {/foreach}
      </table>
    </div>
    </div>
</div>

